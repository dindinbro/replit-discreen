# ============================================================
# Discreen - Variables d'environnement
# ============================================================
# Copie ce fichier en .env et remplis les valeurs
#   cp .env.example .env
#   nano .env
# ============================================================

# --- PostgreSQL ---
DATABASE_URL=postgresql://user:password@localhost:5432/discreen

# --- Supabase ---
VITE_SUPABASE_URL=https://xxxxxxxxxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# --- Discord Bot ---
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=

# --- Discord Webhooks ---
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_SEARCH_WEBHOOK_URL=https://discord.com/api/webhooks/...

# --- Plisio (paiements crypto) ---
PLISIO_API_KEY=

# --- LeakOSINT ---
LEAK_OSINT_API_KEY=

# --- Breach.vip (optionnel) ---
BREACH_API_KEY=

# --- Cloudflare R2 (stockage fichiers) ---
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_BUCKET=discreen
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=auto
S3_PREFIX=

# --- External Proxy API (Flask VPS) ---
EXTERNAL_PROXY_SECRET=

# --- VPS Search Bridge (optionnel) ---
VPS_SEARCH_URL=
VPS_BRIDGE_SECRET=

# --- Dossier de données (optionnel, défaut: ./server/data) ---
DATA_DIR=./server/data

# --- CORS (URL du frontend en production) ---
FRONTEND_URL=https://discreen.example.com

# --- Node environment ---
NODE_ENV=production
PORT=5000
